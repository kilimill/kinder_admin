.card
  max-width 520px
  width 100%
  border 1px solid rgba(24, 28, 33, .06)
  border-radius 6px
  bgc white
  c #4a4a4a
  pos relative
  fs 16px

  &__flex
    display flex

  &__radio-label
    display inline-flex
    align-items center
    user-select none
    cursor pointer

  &__checkbox
    position absolute
    z-index -1
    opacity 0

    &:checked + .card__checkboxstyle
      border-color #0b76ef
      background-color #0b76ef
      background-image url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3e%3c/svg%3e")

  &__checkboxstyle
    width 1rem
    height 1rem
    border 1px solid #adb5bd
    border-radius 0.25em
    // margin-right 0.5em
    background-repeat no-repeat
    background-position center center
    background-size 50% 50%
    // mt vw(7)
    display block

  &__controls
    display flex
    justify-content space-between
    align-items center
    margin-bottom .75rem

  &__btn
    width vw(130)
    height vw(30)
    background-color #00d1b2
    color #fff

    &-fw
      width 100%

  &_wide
    max-width inherit

  &_half
    max-width 50%

  &__header
    df(center, flex-start)
    border-bottom 1px solid rgba(24, 28, 33, .06)

    &-title
      df(center, )
      padding .75rem
      font-weight 700
      c #363636

    &-icon
      df(center, center)
      size 1.5rem

  &__content
    padding 1.5rem

    &-img
      width 13rem
      height 9rem
      object-fit cover
      margin-bottom vw(15)
      border-radius 1rem

    &_table
      pt 1rem

  &__field
    &:not(:last-child)
      mb .75rem

    &_horizontal
      df()

      @media $mobile
        flex-direction column

    &-label
      flex 1 0 0%
      text-align right
      mr 1.5rem
      pt .375em

      @media $mobile
        text-align left
        mr 0
        pt 0

    &-wrapper
      display flex
      align-items center
      justify-content center

    &-center
      text-align center
      margin-top 2rem

    &-body
      flex 5 1 0%

    .ck.ck-content
      min-height 200px
  
  &__label
    c #363636
    db()
    font-weight 700
    fs 1rem

    &-ctr
      display flex
      flex-direction column
      align-items center

    &-checkbox
      display flex
      justify-content space-between
      align-items center
      padding 0.5rem 0

    &:not(:last-child)
      mb .5em

  &__control
    width vw(200)
    padding .5em .75em
    border-radius 3px
    border 1px solid #eee
    transition .3s border-color
    height vw(40)
    &:hover 
      border: 1px solid #aaa

  &__avatar
    margin 0 auto
    size 7rem

    &-img
      margin 0 auto
      size 100%
      db()
      object-fit contain

      &_pointer
        cursor pointer

  hr
    margin 1.5rem -1.5rem
    border none
    h 1px
    db()
    bgc #f5f5f5

  &__filter
    padding 1.125rem 1.5rem
    border-bottom 1px solid rgba(24, 28, 33, .06)
    pos relative

    &-wrapper
      df()
      ml -14px
      w calc(100% + 14px)

    &-column
      max-width 200px
      w calc(100% / 3 - 14px)
      ml 14px

      .input, .select
        w 100%

      .select
        bgc white

      .input
        padding calc(.375em - 1px) calc(.625em - 1px)
        h 36px

  &__filters
    padding 1.125rem 1.5rem
    bgc #f5f5f5
    pos relative

    &-buttons
      df()
      flex-wrap wrap

      .button
        mb .5rem

        &:not(:last-child)
          margin-right -1px
          border-top-right-radius 0
          border-bottom-right-radius 0

        &:not(:first-child)
          border-top-left-radius 0
          border-bottom-left-radius 0

        &:last-child
          mr 0

  &__pagination
    df(, flex-end)
    flex-wrap wrap

    a
      padding calc(.375em - 1px) .75em
      border 1px solid #dbdbdb
      border-radius 4px
      text-align center
      white-space nowrap
      transition .4s color, .4s background-color, .4s border-color
      c #4a4a4a

    li
      mb .5rem

      &.disabled a
        border-color #dbdbdb
        background-color #fff
        box-shadow none
        opacity .5
        cursor default

      &:not(&.disabled) a:hover
        border-color #0a0a0a
        color white
        bgc #0a0a0a

      &.active
        a
          border-color #0a0a0a
          color white
          bgc #0a0a0a

      &:not(:last-child)
        margin-right -1px
        border-top-right-radius 0
        border-bottom-right-radius 0

      &:not(:first-child)
        border-top-left-radius 0
        border-bottom-left-radius 0

      &:last-child
        mr 0

    &-wrapper
      padding 1.125rem 1.5rem
      bgc #f5f5f5
      pos relative

  &__photos
    &-list
      df()
      flex-wrap wrap
      ml -10px
      w calc(100% + 10px)

    &-item
      cursor pointer
      w calc(25% - 10px)
      ml 10px
      mb 10px

    &-img
      w 100%

  &__loader
    h 60px

  &__footer
    padding 0 1.5rem 1.5rem
    df()

    .button + .button
      ml .5rem

    &_rejected
      pb 0
      mb .5rem

      .input
        ml .5rem
        w 100%
        h 34px
        pl 4px

  &__toggle
    &-edit, &-close
      pos absolute
      t .82rem
      r .82rem





  &__radio
    display flex

    &-input
      mt vw(5)

    &-label
      display flex
      flex-direction column
      justify-content center

      &:nth-child(2)
        ml vw(30)

  &__ava
    text-align left
    width 100%
    mb vw(30)

    &-img
      width vw(200)
      object-fit cover
      margin-left 0
      mb vw(30)
      display block

  &__select
    border 1px solid #eee
    height vw(40)

  &__form
    padding vw(15) 0

  &__form-file 
    opacity 0
    width 0
    height 0

    visibility hidden
    position absolute

  &__form-preview
    mr 5px

  &__block-ico
    width vw(35)

  &__form-button
    // width vw(200)
    height 3rem
    background #1bbc9b
    color #fff
    font-size 1rem
    font-weight 700
    display flex
    justify-content flex-start
    align-items center
    border-radius 3px
    cursor pointer

  &__form-img
    object-fit cover
    width 100%

  &__twist
    display flex
    justify-content space-between
    align-items flex-start

  &__pack
    width vw(40)

  &__block
    background-color #fff
    border 1px solid #4a4a4a
    border-radius vw(10)
    pos static

    & + &
      margin-top 1rem

    &-img
      object-fit cover
      width 2rem

    &-inner
      padding 0 vw(10) vw(10) vw(10)
      transition height .3s, padding .3s
      
    &-preview
      display flex
      align-items center
      justify-content space-between
      padding vw(10)    

    &-number
      font-size vw(25)
      text-align center
      margin-bottom vw(15)
      opacity 1
      transition height .3s, opacity .3s

    &-short
      height 0
      opacity 0
      display flex
      align-items center
      transition height .3s, opacity .3s

    &-title
      margin-right 2rem
      font-weight 700

    &-arr
      transition opacity .3s
      font-size vw(20)
      &::before
        transition transform .3s

    &.hide
      .card__block-short
        height 100%
        opacity 1
      
      .card__block-inner
        display none
        overflow hidden
        padding 0
        height 0

      .card__block-arr::before
        transform rotate(180deg) 
  &__col
    width vw(590)
 
